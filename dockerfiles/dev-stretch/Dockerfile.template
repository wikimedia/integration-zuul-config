FROM docker-registry.wikimedia.org/wikimedia-stretch:latest

# Locale generation, auto generated by installing 'locales'
# Plus install of some baseline packages, notably including APT's HTTPS
# transport.
RUN echo "en_US.UTF-8 UTF-8" > /etc/locale.gen

{% set dev_deps|replace('\n', ' ') -%}
apt-transport-https
ca-certificates
git
zip
unzip
locales
{%- endset -%}

RUN {{ dev_deps | apt_install }}

