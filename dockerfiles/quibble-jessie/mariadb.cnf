#
# MariaDB extra settings for Jessie
#

[mysqld]

# Newest InnoDB file format
innodb_file_format = Barracuda

# Enforce real utf8 over the latin1 default that comes in Jessie
character_set_server = utf8mb4
collation-server = utf8mb4_general_ci

# With character-set-server = utf8mb4, a VARCHAR(255) ends up being too long.
innodb_large_prefix = 1

# Stricter mode
# Note: should also be set in MediaWiki via $wgSQLMode
sql_mode = 'TRADITIONAL'
