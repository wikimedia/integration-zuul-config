FROM {{ "ci-jessie" | image_tag }}

RUN git clone --depth 1 https://gerrit.wikimedia.org/r/p/integration/jenkins.git /srv/jenkins && \
    rm -rf /srv/jenkins/.git

RUN mkdir -p /srv/deployment/integration/slave-scripts
RUN cp -R /srv/jenkins /srv/deployment/integration/slave-scripts
RUN cp -R /srv/jenkins/bin /srv/slave-scripts
RUN cp -R /srv/jenkins/etc/zuul-clonemap.yaml /srv/zuul-clonemap.yaml

USER nobody
