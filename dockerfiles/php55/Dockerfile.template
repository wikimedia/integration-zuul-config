FROM {{ "ci-jessie" | image_tag }}

{% set php55_packages|replace('\n', ' ') -%}
php5.5-cli
php5.5-common
php5.5-curl
php5.5-dev
php5.5-gd
php5.5-gmp
php5.5-intl
php5.5-ldap
php5.5-luasandbox
php5.5-mbstring
php5.5-mcrypt
php5.5-mysql
php5.5-redis
php5.5-sqlite3
php5.5-tidy
php5.5-xml
php5.5-xsl
php5.5-zip
{% endset %}

RUN echo "deb http://apt.wikimedia.org/wikimedia jessie-wikimedia component/ci" \
        > /etc/apt/sources.list.d/jessie-ci-php55.list && \
    {{ php55_packages | apt_install }}

USER nobody

ENTRYPOINT ["php"]
CMD ["--help"]
